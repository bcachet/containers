FROM ghcr.io/bcachet/containers/dev:latest
USER root

RUN curl -s https://packagecloud.io/install/repositories/ookla/speedtest-cli/script.rpm.sh | bash
RUN dnf install -y \
            bcc \
            bpftrace \
            iproute \
            nicstat \
            numactl \
            sysprof \
            sysstat \
            tiptop \
            util-linux \
            speedtest \
    --nodocs --setopt install_weak_deps=False \
    && dnf clean all -y